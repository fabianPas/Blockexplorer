<!DOCTYPE html>
<html>
<head>
    @Html.Partial("HeadPartial")
</head>
<body>
    <div class="navbar navbar-inverse " role="navigation">
        <div class="container">
            @Html.Partial("PartialLogoAndNavbarHeader")
            <div class="collapse navbar-collapse">
                @Html.Partial("PartialMenu")
            </div><!--/.nav-collapse -->

        </div>
    </div>

    <div class="container">
        @RenderBody()
    </div>

    <footer class="footer" style="position: absolute">
        <div class="container">
            <div class="copyr">© <a href="https://obsidianplatform.com/">Obsidian Platform</a> @DateTime.Now.Year - Blockexplorer v@(Program.Version)</div>
            <div class="pull-right f-social">
                <a href=""><img src="~/images/fb.png" /></a>
                <a href=""><img src="~/images/tw.png" /></a>
            </div>
        </div>
    </footer>
    @Html.Partial("BottomPartial")

    @RenderSection("scripts", required: false)
</body>
</html>