@using Blockexplorer.Models
@model Blockexplorer.Models.IndexModel
@{
    ViewData["Title"] = "Obsidian Blockexplorer";
}

<div class="page-content">
    <div class="home-section home-first">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div class="home-search">
                        <img src="images/logo.png" style="width: 260px"/>
                        <br/>
                        <br />
                        <br/>
                        <br />
                        <form method="get" action="@Url.Action("Index", "Search")">
                            <div class="input-group" role="search">
                                <input type="text" class="form-control input-lg" name="id" placeholder="Search blocks, transactions or addresses">
                                <span class="input-group-btn">
                                    <button class="btn btn-search" type="submit"><span class="glyphicon glyphicon-search"></span> Search</button>
                                </span>
                            </div>
                        </form>
                        <p>
                            @if (@Model.LastBlock != null)
                            {
                                <small>Last block: <a href="@Url.Action("Index", "Block", new {id = Model.LastBlock.Hash})">@Model.LastBlock.Height</a> - Mainnet</small>
                            }
                            else
                            {
                                <small>The Blockexplorer node seems to be offline - Mainnet</small>
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
